
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/HOTEL/Views/Shared/_LayoutAdmin.cshtml";
}


<ng-view></ng-view>
@section scripts
{
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-animate.js"></script>
    <script src="~/Scripts/loading-bar.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.js"></script>
    <script src="~/Scripts/angular-touch.js"></script>
    <script src="~/Scripts/angular-route.js"></script>


    <script>

       // var hostHolder = 'http://localhost:50162';
        
        var hostHolder = 'http://www.jahatechno.com';
         angular.module("hotelAdminApp", ['ngRoute', 'angular-loading-bar', 'ui.bootstrap'])
            .constant("hotelManagementUrl", hostHolder + '/api/HOTELManagement')
            .directive('loading', ['$http', function ($http) {
                 return {
                     restrict: 'A',
                     link: function (scope, elm, attrs) {
                         scope.isLoading = function () {
                             return $http.pendingRequests.length > 0;
                         };
                         scope.$watch(scope.isLoading, function (v) {
                             if (v) {
                                 elm.show();
                             } else {
                                 elm.hide();
                             }
                         });
                     }
                 };
             }])
            .config(function ($routeProvider) {

                $routeProvider.when("/home",     { templateUrl: "/Areas/HOTEL/app/admin/views/home.html" });
                $routeProvider.when("/login", { templateUrl: "/Areas/HOTEL/app/admin/views/login.html" });
                $routeProvider.when("/register", { templateUrl: "/Areas/HOTEL/app/admin/views/register.html" });
                $routeProvider.when("/roomSetupInfo", { templateUrl: "/Areas/HOTEL/app/admin/views/roomSetupInfo.html" });
                $routeProvider.when("/roomDiscount", { templateUrl: "/Areas/HOTEL/app/admin/views/roomDiscount.html" });
                $routeProvider.when("/vatEntry", { templateUrl: "/Areas/HOTEL/app/admin/views/roomVat.html" });    
                $routeProvider.otherwise({ templateUrl: '/Areas/HOTEL/app/admin/views/home.html' });

            });
    </script>


    <script src="~/Areas/HOTEL/app/admin/controllers/adminCtrl.js"></script>
    <script src="~/Areas/HOTEL/app/admin/controllers/roomSetupInfoCtrl.js"></script>
    <script src="~/Areas/HOTEL/app/admin/controllers/roomDiscountCtrl.js"></script>
    <script src="~/Areas/HOTEL/app/admin/controllers/roomVatCtrl.js"></script>
    <script src="~/Areas/HOTEL/app/admin/services/apiCallSvc.js"></script>
    <script src="~/Areas/HOTEL/app/admin/services/authLocalStorageSvc.js"></script>
    <script src="~/Areas/HOTEL/app/admin/services/apiDateTimeLocalize.js"></script>
    <script src="~/Areas/HOTEL/app/admin/services/loginSvc.js"></script>
    <script src="~/Areas/HOTEL/app/admin/controllers/homeCtrl.js"></script>
    <script src="~/Areas/HOTEL/app/admin/filters/filters.js"></script>

}




