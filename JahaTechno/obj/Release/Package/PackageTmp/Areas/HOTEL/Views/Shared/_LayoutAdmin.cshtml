<!DOCTYPE html>
<html ng-app="hotelAdminApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BTMS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body ng-controller="adminCtrl">
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @*<a class="navbar-brand" href="@Url.Action( "Index", "AdminBTMS", new { area = "BTMS" }, null)">
                    <img alt="BTMS" src="~/Areas/BTMS/Images/1479376536_bus.png">
                </a>*@

                @*@Html.ActionLink("BTMS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "AdminHOTEL", new { area = "HOTEL" }, null)</li>

                </ul>
                <ul class="nav navbar-nav" ng-show="auth.isAuthenticated">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="glyphicon glyphicon-wrench"></i> Manage <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a ng-click="roomSetupInfoPage()"> Room Setup Info</a>
                            </li>
                            <li>
                                <a ng-click="roomDiscountPage()">Room Discount</a>
                            </li>
                            <li>
                                <a ng-click="roomVatPage()">Vat Entry</a>
                            </li>
                            

                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right" ng-show="!auth.isAuthenticated">
                    <li> <a ng-click="registerPage()">Register</a> </li>
                </ul>
                <ul class="nav navbar-nav navbar-right" ng-show="!auth.isAuthenticated">
                    <li> <a ng-click="logingPage()">Sign In</a> </li>
                </ul>
                <ul ng-show="auth.isAuthenticated" class="nav navbar-nav navbar-right">
                    <li>
                        <a  ng-click="signout()" ng-href="@Url.Action("Index", "Home", new { Area = "" })"  >Sign Out </a>

                    </li>
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>

    <div class="well">
        
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
